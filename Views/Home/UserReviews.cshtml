        <style>
            .nav-wrapper {
                background-color:#ebdfdb;
            }
            .brand-logo {
                margin-left: 30px;
            }

            .img-responsive{
                /* border: 2px pink solid; */
                height: 300px;
                width: 300px;
                margin-top: 20px;
                margin-right: 100px;
                display: inline-block;
                position: absolute;
                margin-left: 3%;
                margin-top: 3%;
                border-radius: 50%;
            }
            .users_nav {
               /* border: 2px green solid; */
                height: 300px;
                width: 350px;
                margin-top: 20px;
                margin-right: 5%;
                display: inline-block;
                text-align: center;
                vertical-align: top;
                margin-left: 2%;
                
            }
            .button1 {
                margin-top: 30%;
                padding: 2%;
                background-color: transparent;
                border-radius: 30px;
            }
            .button2 {
                padding: 2%;
                background-color: transparent;
                border-radius: 30px;
                margin-top: 10px;
            }


            .usrs_info {
               /* border: 1px red solid; */
                height: 200px;
                width: 100%;
                margin-top: 20px;
                display: inline-block;
                vertical-align: top;
                text-align: center;
                background-color: #fafafa;
                background-image: url("https://www.transparenttextures.com/patterns/climpek.png");
            

            }
            .all_reviews {
                /* border: 1px purple solid; */
                height: 400px;
                width: 60%;
                display: inline-block;
                vertical-align: top;
                text-align: center;
                overflow: scroll;
            }
            .img {
                width: 70px;
                height: 70px;
                border-radius: 20%;
            }
            h6 {
                text-align: center;
                display: inline-block;
            }
            h5 {
                display: inline-block;
            }

            .vl {
                border-left: 1px solid #e7e7e7;
                height: 20%;
                position: absolute;
                left: 70%;
                margin-left: -3px;
                top: 15%;
            }
            .add_photo {
                margin-left: 70%;
                width: 30%;
                border: 1px palegreen solid;
                display: inline-block;
              
                
         
                
            }


        </style>
        
</head>
<body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
    <li><a href="#!">Me</a></li>
    <li class="divider"></li>
    <li><a href="#!">Logout</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo">InstaWorthy</a>
            <ul class="right hide-on-med-and-down">
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger" href="#!" data-target="dropdown1"><i class="material-icons right">apps</i></a></li>
            </ul>
        </div>
    </nav>

<div class="container_grid">
   

        <div class="users_profile">
            <img src="@ViewBag.returnUser[0].ProfileUrl" alt="ASP.NET" class="img-responsive" />
        </div>

        <div class="usrs_info">
            <span class="user_info_text">
            <h5>@Context.Session.GetString("Name")</h5> <br>
            <h6>
                Location: @ViewBag.returnUser[0].Location
            </h6> 
            
            <br>
            <!-- <h6>
            <i class="material-icons">star</i> PLACEHOLDER
            </h6> -->
            </span>

            <div class="vl"></div>
            <!-- <div class="add_photo">
              <span>Add Profile Photo</span> <i class="1rem material-icons">photo_camera</i>
            </div> -->


    </div>

    <div class="users_nav">
        <a href="profile"><button class="button1">Profile Overview</button> </a>
        <br>
        <a href="userreviews"><button class="button2">Reviews</button></a>
    </div>

    <div class="all_reviews">
        <!-- all of their reviews -->
        <h4>All Activity</h4>

      <table>
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        <tbody>
            @{
             for(var i = 0; i < @ViewBag.allPlaces.Count; i++)
            {
                //if(@ViewBag.allPlaces[i].UserId == @Context.Session.GetInt32("id"))
                //{
                <tr>
                    <td>
                        <a href="/place/@ViewBag.allPlaces[i].PlaceId">
                            <img src="@ViewBag.allPlaces[i].PicUrl" class="img">
                        </a>
                    </td>

                    <td>  @ViewBag.allPlaces[i].Uploader.FirstName wrote a review for @ViewBag.allPlaces[i].Name
                        <br>
                        <p>
                            
                        </p>
                    </td>
                </tr>
                //}
            }
            }
        </tbody>
      </table>
    </div>    
</div>
</body>
</html>
