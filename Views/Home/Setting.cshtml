</head>
<body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
    <li><a href="/profile">Me</a></li>
    <li class="divider"></li>
    <li><a href="/addplace">Add</a></li>
    <li class="divider"></li>
    <li><a href="/logout">Logout</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper">
            <span href="#!" class="brand-logo">InstaWorthy</span>
            <ul class="right hide-on-med-and-down">
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger" href="#!" data-target="dropdown1"><i class="material-icons right">apps</i></a></li>
            </ul>
        </div>
    </nav>

<div class="container_grid">
   
    <div class="block">
        <div class="add_location mx-auto">
            <h5>Update Profile</h5>

            @model User
            <form asp-action="updateProfile" method="post" asp-controller="home" enctype="multipart/form-data">
                <div class="col">

                    <div class="input-field row-12">
                        <input id="FirstName" type="text" asp-for="FirstName">
                        <label asp-for="FirstName" class="active">First Name</label>
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    
                    <div class="input-field row-12">
                        <input id="LastName" type="text" asp-for="LastName">
                        <label asp-for="LastName" class="active">Last Name</label>
                        <span asp-validation-for="LastName"></span>
                    </div>

                     <div class="input-field row-12">
                        <input id="ImageFile" name="ImageFile" type="file">
                        <label for="ImageFile"></label>
                    </div> 

                    <button class="btn waves-effect waves-light" type="submit" name="action">Update
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
        


    </div>

 

</div>

</body>
</html>